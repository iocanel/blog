{
  "apiVersion": "v1",
  "kind": "List",
  "metadata": {
    "name": "jenkins"
  },
  "items": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "labels": {
          "component": "jenkins",
          "provider": "fabric8"
        },
        "name": "jenkins"
      },
      "spec": {
        "ports": [
          {
            "port": 80,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "component": "jenkins",
          "provider": "fabric8"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "ReplicationController",
      "metadata": {
        "labels": {
          "component": "jenkins",
          "provider": "fabric8"
        },
        "name": "jenkins"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "component": "jenkins",
          "provider": "fabric8"
        },
        "template": {
          "metadata": {
            "labels": {
              "component": "jenkins",
              "provider": "fabric8"
            }
          },
          "spec": {
            "containers": [
              {
                "env": [
                  {
                    "name": "KUBERNETES_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  }
                ],
                "image": "iocanel/jenkins-dind",
                "imagePullPolicy": "IfNotPresent",
                "name": "jenkins",
                "ports": [
                  {
                    "containerPort": 8080,
                    "name": "http"
                  }
                ],
                "securityContext": {
                  "privileged": true
                },
                "volumeMounts": [
                  {
                    "mountPath": "/var/jenkins_home/workspace",
                    "name": "jenkins-workspace",
                    "readOnly": false
                  },
                  {
                    "mountPath": "/home/jenkins/",
                    "name": "jenkis-home",
                    "readOnly": false
                  }
                ]
              }
            ],
            "serviceAccount": "fabric8",
            "volumes": [
              {
                "hostPath": {
                  "path": "/home/jenkins/"
                },
                "name": "jenkis-home"
              },
              {
                "emptyDir": {
                  "medium": ""
                },
                "name": "jenkins-workspace"
              }
            ]
          }
        }
      }
    }
  ]
}
